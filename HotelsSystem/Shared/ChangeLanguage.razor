@inject IConfiguration Configuration;
@inject IStringLocalizer<App> L;
@if(cultures != null)

{
    <MudMenu Icon="@Icons.Material.Filled.Language" IconColor="Color.Inherit" Class="white-text" ActivationEvent="@MouseEvent.MouseOver">
        <ChildContent>
            <MudMenuItem><a @onclick="@(async()=> await RequestCultureChange("en-US",2))">English</a></MudMenuItem>
            <MudMenuItem><a @onclick="@(async()=> await RequestCultureChange("ku-Arab",1))">کوردی</a></MudMenuItem>
            <MudMenuItem><a @onclick="@(async()=> await RequestCultureChange("ar-IQ",3))">عربي</a></MudMenuItem>
        </ChildContent>
    </MudMenu>
}